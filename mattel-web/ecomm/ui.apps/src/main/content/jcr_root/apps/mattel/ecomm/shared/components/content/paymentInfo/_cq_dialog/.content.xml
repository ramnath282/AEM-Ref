<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Payment Information"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}1000"
    width="{Long}800">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <paymentInfoSection
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Payment Information Section"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <paymentInfoTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Title for the Payment Information Section"
                                        fieldLabel="Payment Information Section Title :"
                                        name="./paymentInfoTitle"/>
                                    <addNewCardLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Add New Card CTA"
                                        fieldLabel="Add New Card CTA Label :"
                                        name="./addNewCardLabel"/>
                                    <defaultCardLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Default Card"
                                        fieldLabel="Default Card Label :"
                                        name="./defaultCardLabel"/>
                                    <additionalCardsLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Additional Cards"
                                        fieldLabel="Additional Cards Label :"
                                        name="./additionalCardsLabel"/>
                                    <addLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Add"
                                        fieldLabel="Label for Add :"
                                        name="./addLabel"/>
                                    <editLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Edit"
                                        fieldLabel="Label for Edit :"
                                        name="./editLabel"/>
                                    <deleteLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Delete"
                                        fieldLabel="Label for Delete :"
                                        name="./deleteLabel"/>
                                    <cancelButtonLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Cancel button"
                                        fieldLabel="Label for Cancel button :"
                                        name="./cancelButtonLabel"/>
									 <updateThisCardLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Update This Card"
                                        fieldLabel="Update This Card Label :"
                                        name="./updateThisCardLabel"/>
                                </items>
                            </column>
                        </items>
                    </paymentInfoSection>
                    <addCardSection
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Add Card Section"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <defaultCardCheckLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Default Card Checkbox"
                                        fieldLabel="Default Card Checkbox Label :"
                                        name="./defaultCardCheckLabel"/>
                                    <nameOnCardLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Name on Card"
                                        fieldLabel="Name on Card Label :"
                                        name="./nameOnCardLabel"/>
                                    <cardNumberLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Card Number"
                                        fieldLabel="Card Number Label :"
                                        name="./cardNumberLabel"/>
                                    <monthLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Month"
                                        fieldLabel="Month Label :"
                                        name="./monthLabel"/>
                                    <yearLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Year"
                                        fieldLabel="Year Label :"
                                        name="./yearLabel"/>
                                    <billingAddressLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Billing Address"
                                        fieldLabel="Label for Billing Address :"
                                        name="./billingAddressLabel"/>
                                    <billingAddressDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="Please enter Billing Address Description"
                                        fieldLabel="Billing Address Description :"
                                        name="./billingAddressDescription"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/rtePlugins/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/rtePlugins/uiSettings"/>
                                    </billingAddressDescription>
                                    <addThisCardLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter Label for Add This Card"
                                        fieldLabel="Add This Card Label :"
                                        name="./addThisCardLabel"/>
                                </items>
                            </column>
                        </items>
                    </addCardSection>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
