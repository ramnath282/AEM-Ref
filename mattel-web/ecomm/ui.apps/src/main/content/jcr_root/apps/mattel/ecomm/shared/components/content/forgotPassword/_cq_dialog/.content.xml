<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Forgot Password"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <fPasswordTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter title for Forgot Password"
                        fieldLabel="Forgot Password Title :"
                        name="./fPasswordTitle"/>
                    <frstLineDescription
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter first line of description"
                        fieldLabel="First line of Description :"
                        name="./frstLineDescription"/>
                    <scndLineDescription
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter second line of description"
                        fieldLabel="Second line of Description :"
                        name="./scndLineDescription"/>
                    <emailLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter Label for Email Address"
                        fieldLabel="Email Address Label :"
                        name="./emailLabel"/>
                    <sendValidationButtonLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter Label for Send Me Validation Button"
                        fieldLabel="Send Me Validaiton Button Label :"
                        name="./sendValidationButtonLabel"
                        required="{Boolean}true"/>
                    <successPath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                            fieldDescription="Please enter success page path"
                            fieldLabel="Success Page Path"
                            name="./successPath"
                            required="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
