<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Sign In"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500"
    width="{Long}600">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter the title"
                        fieldLabel="Title:"
                        name="./title"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter the Description"
                        fieldLabel="Description :"
                        name="./description"/>
                    <emailAddressLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter label for the Email Address Input Box "
                        fieldLabel="Email Address Label:"
                        name="./emailAddressLabel"/>
                    <passwordLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter label for the Password Input Box "
                        fieldLabel="Password Label:"
                        name="./passwordLabel"/>
                    <forgotPasswordLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter label for the Forgot Password Link "
                        fieldLabel="Forgot Password Label:"
                        name="./forgotPasswordLabel"/>
                    <forgotPasswordPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Please enter the Forgot Password Path"
                        fieldLabel="Forgot Password Path:"
                        name="./forgotPasswordPath"/>
                    <signInButtonLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter label for the Sign In Button "
                        fieldLabel="Sign In Button Label:"
                        name="./signInButtonLabel"
                        required="{Boolean}true"/>
                    <successpath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Please enter the Success Path"
                        fieldLabel="Success Path"
                        name="./successPath"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
