<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Media Content Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_text_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <generalConfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Config"
                        sling:resourceType="granite/ui/components/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <contactDetail
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Please provide contact details"
                                fieldLabel="Contact Details"
                                name="./contactDetail"
                                useFixedInlineToolbar="{Boolean}true">
                                    <rtePlugins
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceSuperType="mattel/global/components/content/rtePlugins/rtePlugins"/>
                                    <uiSettings
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceSuperType="mattel/global/components/content/rtePlugins/uiSettings"/>
                            </contactDetail>
                        </items>
                    </generalConfig>
		    <cta
                        jcr:primaryType="nt:unstructured"
                        jcr:title="CTA"
                        sling:resourceType="granite/ui/components/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <mediaContact
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Please  provide media contact label Ex:Media Contact"
                                fieldLabel="Media Contact Label"
                                name="./mediaContact"/>
                            <contactHeading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Please Enter contact heading label"
                                fieldLabel="Contact Heading Label"
                                name="./contactHeading"/>
                        </items>
                    </cta>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
