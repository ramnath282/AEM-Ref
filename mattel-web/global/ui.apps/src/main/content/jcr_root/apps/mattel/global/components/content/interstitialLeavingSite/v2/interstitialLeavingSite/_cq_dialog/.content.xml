<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Interstitial Leaving The Site"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <backgroundStyle
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background Style"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                    <backgroundColor
                                                    jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldLabel="Background Color:"
                                        name="./backgroundColorModel"/>
                                    <backgroundImage
                                        jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                        fieldLabel="Upload Background Image:"
                                        fileReferenceParameter="./fileReferenceBgImgmodel"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                                multiple="{Boolean}false"
                                        name="./backgroundImageModel"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                    <backgroundoption
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Background Option"
                                        name="./backOption">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image"
                                                        value="image"/>
                                                    <color
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Color"
                                                        value="color"/>
                                                </items>
                                    </backgroundoption>
                                        </items>
                                    </column>
                        </items>
                    </backgroundStyle>
                    <modalText
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <modelTitle
                                        cq:xfVariantType="web"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="Model Title"
                                        fieldLabel="Model Title"
                                        height="20"
                                        name="./modelTitle"
                                        useFixedInlineToolbar="{Boolean}true">										
                                        <htmlRules
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/htmlRules"/>
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/uiSettings"/>
                                    </modelTitle>
                                    <modelSubTitle
                                        cq:xfVariantType="web"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="Model SubTitle"
                                        fieldLabel="Model SubTitle"
                                        height="20"
                                        name="./modelSubTitle"
										useFixedInlineToolbar="{Boolean}true">										
                                        <htmlRules
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/htmlRules"/>
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/uiSettings"/>
                                    </modelSubTitle>        
                                    <modelDescription
                                        cq:xfVariantType="web"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="Model Description"
                                        fieldLabel="Model Description"
                                        height="20"
                                        name="./modelDescription"
                                        required="{Boolean}true"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <htmlRules
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/htmlRules"/>
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="mattel/global/components/content/globalRtePlugins/uiSettings"/>
                                    </modelDescription>
                                    <modelContinueButton
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" Model Continue Button Text"
                                        name="./modelContinueButton"/>
                                    <modelGoBackButton
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Model GoBack Button Text"
                                        name="./modelGoBackButton"/>
                                    <targetUrl
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Open URL In"
                                        name="./buttonsTargetUrl">
                                        <items jcr:primaryType="nt:unstructured">
                                            <newTab
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="New Tab"
                                                value="tabWindow"/>
                                            <sameWindow
                                                jcr:primaryType="nt:unstructured"
                                                text="Same Window"
                                                value="sameWindow"/>
                                            <newWindow
                                                granite:hide="${cqDesign.disableSearch}"
                                                jcr:primaryType="nt:unstructured"
                                                text="New Window"
                                                value="newWindow"/>
                                        </items>
                                    </targetUrl>
                                    <alwaysEnglish
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Always English check for Multi-Lingual  Site Tagging"
                                        fieldLabel="Adobe Tracking Name"
                                        name="./alwaysEnglish"
                                        required="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </modalText>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
