<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Responsive Tab"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[extraClientlibs,global.responsiveTab]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <responsiveInfo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Responsive"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <viewer
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Background Configuration"
                                sling:resourceType="granite/ui/components/foundation/section">
                                <responsive
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Responsive"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <content
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <tabs
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                                                                maximized="{Boolean}true">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <content
                                                                        jcr:primaryType="nt:unstructured"
                                                                        jcr:title="Columns"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <column
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <section
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <field
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                jcr:title="Choose Responsive Grid Columns"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                                    <xl
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="XL"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./xlColumns"/>
                                                                                                    <large
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="L"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./largeColumns"/>
                                                                                                    <medium
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="M"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./mediumColumns"/>
                                                                                                    <small
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="S"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./smallColumns"/>
                                                                                                    <xs
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="XS"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./xsColumns"/>
                                                                                                </items>
                                                                                            </field>
                                                                                        </items>
                                                                                    </section>
                                                                                </items>
                                                                            </column>
                                                                        </items>
                                                                    </content>
                                                                    <configurations
                                                                        jcr:primaryType="nt:unstructured"
                                                                        jcr:title="Config"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <column
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <section
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <showMoreFeature
                                                                                                granite:class="cq-dialog-checkbox-showhide-tab-options"
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                                                cq-dialog-checkbox-showhide-tab-options-target=".togglefield1"
                                                                                                fieldDescription="Show More Feature"
                                                                                                fieldLabel="Show More Feature"
                                                                                                name="./showMoreFeature"
                                                                                                uncheckedValue="false"
                                                                                                value="true">
                                                                                                <granite:data
                                                                                                    jcr:primaryType="nt:unstructured"
                                                                                                    cqDialogCheckboxShowhideTarget=".togglefield1"/>
                                                                                            </showMoreFeature>
                                                                                            <showMoreRepete
                                                                                                granite:class="cq-dialog-checkbox-showhide-tab-options"
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                                                cq-dialog-checkbox-showhide-tab-options-target=".togglefield2"
                                                                                                fieldDescription="Show More Repeat"
                                                                                                fieldLabel="Show More Repeat"
                                                                                                name="./showMoreRepeat"
                                                                                                uncheckedValue="false"
                                                                                                value="true">
                                                                                                <granite:data
                                                                                                    jcr:primaryType="nt:unstructured"
                                                                                                    cqDialogCheckboxShowhideTarget=".togglefield2"/>
                                                                                            </showMoreRepete>
                                                                                            <ctaRepeat
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                fieldLabel="# Show More CTA Repeat"
                                                                                                max="100"
                                                                                                min="-1"
                                                                                                name="./ctaRepeat"/>
                                                                                            <mobileScorll
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                                                fieldDescription="Turning this on enables a horizontal scrolling experience similar to a carousel for mobile only."
                                                                                                fieldLabel="Mobile Scroll"
                                                                                                name="./scrollMobile"
                                                                                                uncheckedValue="false"
                                                                                                value="true"/>
                                                                                        </items>
                                                                                    </section>
                                                                                </items>
                                                                            </column>
                                                                        </items>
                                                                    </configurations>
                                                                    <initialRows
                                                                        granite:class="togglefield1"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        jcr:title="Initial Rows"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <column
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <section
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <field
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                jcr:title="Number of rows to show initially"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                                    <xlInitial
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="XL"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./xlInitial"/>
                                                                                                    <largeInitial
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="L"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./largeInitial"/>
                                                                                                    <mediumInitial
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="M"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./mediumInitial"/>
                                                                                                    <smallInitial
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="S"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./smallInitial"/>
                                                                                                    <xsInitial
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="XS"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./xsInitial"/>
                                                                                                </items>
                                                                                            </field>
                                                                                        </items>
                                                                                    </section>
                                                                                </items>
                                                                            </column>
                                                                        </items>
                                                                    </initialRows>
                                                                    <showMoreRows
                                                                        granite:class="togglefield2"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        jcr:title="Show More Rows"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <column
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <section
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <field
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                jcr:title="Display number of rows on click of Show More CTA"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                                    <xlShowMore
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="XL"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./xlShowMore"/>
                                                                                                    <largeShowMore
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="L"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./largeShowMore"/>
                                                                                                    <mediumShowMore
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="M"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./mediumShowMore"/>
                                                                                                    <smallShowMore
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="S"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./smallShowMore"/>
                                                                                                    <xsShowMore
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                                                        fieldLabel="XS"
                                                                                                        max="12"
                                                                                                        min="-1"
                                                                                                        name="./xsShowMore"/>
                                                                                                </items>
                                                                                            </field>
                                                                                        </items>
                                                                                    </section>
                                                                                </items>
                                                                            </column>
                                                                        </items>
                                                                    </showMoreRows>
                                                                </items>
                                                            </tabs>
                                                        </items>
                                                    </content>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </viewer>
                        </items>
                    </responsiveInfo>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
