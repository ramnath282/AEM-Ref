<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:targetPath="/var/commerce/products/mattel-play"
        jcr:description="Scaffolding that is used to create and update Mattel Play products."
        jcr:primaryType="cq:PageContent"
        jcr:title="Product Data"
        sling:resourceType="wcm/scaffolding/components/scaffolding">
        <cq:dialog
            jcr:primaryType="nt:unstructured"
            jcr:title="Mattel Play Product Properties"
            sling:resourceType="cq/gui/components/authoring/dialog">
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column1
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <images
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="commerce/gui/components/admin/products/images">
                                        <image
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="commerce/gui/components/admin/products/images/image"
                                            var="${imageRelPath}">
                                            <thumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="commerce/gui/components/admin/products/properties/productthumbnail"
                                                class="cq-ProductThumbnail">
                                                <assetcategory
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                    fieldLabel="Asset Category"
                                                    multiple="true"
                                                    name="./${imageRelPath}/assetCategory"
                                                    rel="cq-commerce-product-image-category"
                                                    renderReadOnly="{Boolean}true"/>
                                                <assetpicker
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="commerce/gui/components/common/assetpicker"
                                                    fieldLabel="Asset Path"
                                                    name="./${imageRelPath}/${imagePropName}"
                                                    previewTarget=".cq-ProductThumbnail"
                                                    renderReadOnly="{Boolean}true"/>
                                                <remove
                                                    granite:class="button remove-image-button"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/button"
                                                    align="right"
                                                    text="Remove"
                                                    type="image"/>
                                            </thumbnail>
                                        </image>
                                        <addimage
                                            granite:class="button add-image-button"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/button"
                                            align="right"
                                            text="Add Asset"
                                            type="image"/>
                                    </images>
                                </items>
                            </column1>
                            <column2
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tabs
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/tabs">
                                        <items jcr:primaryType="nt:unstructured">
                                            <basic
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Basic"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <titles
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <title
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Title"
                                                                name="./jcr:title"
                                                                renderReadOnly="{Boolean}true"
                                                                required="{Boolean}true"/>
                                                            <description
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                                fieldLabel="Description"
                                                                name="./jcr:description"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <tags
                                                                cq:showOnCreate="{Boolean}true"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                                fieldLabel="Tags"
                                                                multiple="true"
                                                                name="./cq:tags"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <product-asset-category-default
                                                                cq:showOnCreate="{Boolean}true"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                                fieldLabel="Default Asset Category"
                                                                multiple="true"
                                                                name="./assetCategory"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <charset
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                                ignoreData="{Boolean}true"
                                                                name="_charset_"
                                                                value="utf-8"/>
                                                        </items>
                                                    </titles>
                                                    <erp
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="ERP Data"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <sku
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="SKU"
                                                                name="./identifier"
                                                                renderReadOnly="{Boolean}true"
                                                                required="{Boolean}true"
                                                                validation="mattelplay.sku"/>
                                                            <ageGrade
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Age Grade"
                                                                name="./ageGrade"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <price
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Price"
                                                                name="./price"
                                                                renderReadOnly="{Boolean}true"
                                                                validation="mattelplay.price"/>
                                                            <price-typehint
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                                name="./price@TypeHint"
                                                                renderReadOnly="{Boolean}true"
                                                                value="Decimal"/>
                                                            <lastModified
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                                name="./jcr:lastModified"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <lastModified-typehint
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                                name="./jcr:lastModified@TypeHint"
                                                                renderReadOnly="{Boolean}true"
                                                                value="Date"/>
                                                        </items>
                                                    </erp>
                                                </items>
                                            </basic>
                                            <product-tabs
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Product Tabs"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <clientlibs
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                                                        categories="[cq.authoring.dialog]"/>
                                                    <summary
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldLabel="Summary"
                                                        name="./summary"
                                                        renderReadOnly="{Boolean}true"
                                                        useFixedInlineToolbar="{Boolean}true">
                                                        <htmlRules
				                                            jcr:primaryType="nt:unstructured"
				                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/htmlRules"/>
				                                        <rtePlugins
				                                            jcr:primaryType="nt:unstructured"
				                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/rtePlugins"/>
				                                        <uiSettings
				                                            jcr:primaryType="nt:unstructured"
				                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/uiSettings"/>
                                                    </summary>
                                                    <features
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldLabel="Features"
                                                        name="./features"
                                                        renderReadOnly="{Boolean}true"
                                                        useFixedInlineToolbar="{Boolean}true">
                                                        <htmlRules
				                                            jcr:primaryType="nt:unstructured"
				                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/htmlRules"/>
				                                        <rtePlugins
				                                            jcr:primaryType="nt:unstructured"
				                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/rtePlugins"/>
				                                        <uiSettings
				                                            jcr:primaryType="nt:unstructured"
				                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/uiSettings"/>
                                                    </features>
                                                </items>
                                            </product-tabs>
                                            <variant-configuration
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Variant configuration"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <axes
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        fieldLabel="Variant Axes">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            name="./cq:productVariantAxes"/>
                                                    </axes>
                                                </items>
                                            </variant-configuration>
                                        </items>
                                    </tabs>
                                </items>
                            </column2>
                        </items>
                    </columns>
                </items>
            </content>
        </cq:dialog>
        <dialog/>
    </jcr:content>
</jcr:root>
