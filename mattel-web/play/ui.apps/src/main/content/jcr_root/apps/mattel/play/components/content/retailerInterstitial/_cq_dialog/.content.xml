<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Retailer Interstitial Configuration"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500"
    width="{Long}650">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <interstitialDetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Retailer Interstitial Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <brandImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Brand Image for Interstitial"
                                                fieldLabel="Brand Image"
                                                fileReferenceParameter="./brandImage"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                                multiple="{Boolean}false"
                                                name="./intBrandImage"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <brandAlt
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                                fieldLabel="Brand Alternative Text"
                                                name="./brandAlt"
                                                wrapperClass="cmp-image--editor-alt"/>
                                            <interstitialTitle
                                                cq:xfVariantType="web"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Leave empty to use the Interstitial title."
                                                fieldLabel="Interstitial Title"
                                                height="20"
                                                name="./interstitialTitle"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <htmlRules
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/htmlRules"/>
		                                        <rtePlugins
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/rtePlugins"/>
		                                        <uiSettings
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/uiSettings"/>
                                            </interstitialTitle>
                                            <interstitialDescription
                                                cq:xfVariantType="web"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Interstitial Description"
                                                fieldLabel="Interstitial Description"
                                                height="20"
                                                name="./description"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <htmlRules
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/htmlRules"/>
		                                        <rtePlugins
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/rtePlugins"/>
		                                        <uiSettings
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceSuperType="mattel/play/components/content/playRtePlugins/uiSettings"/>
                                            </interstitialDescription>
                                            <alwaysEnglish
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Always English check for Multi-Lingual  Site Tagging"
                                                fieldLabel="Adobe Tracking Name"
                                                name="./alwaysEnglish"
                                                required="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </interstitialDetails>
                    <interstitialCtaConfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="CTA Buttons Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <ctaGoBack
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Label Text for Go Back Button"
                                                fieldLabel="Go Back Text(CTA)"
                                                name="./ctaGoBack"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </interstitialCtaConfig>
                    <interstitialBackgroundConfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Interstitial Background Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <interstitialBgImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Retailer Interstitial Background Image"
                                                fileReferenceParameter="./interstitialBgImage"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                                multiple="{Boolean}false"
                                                name="./interstitialBackgroundImage"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <interstitialBgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Retailer Interstitial Background Color"
                                                name="./interstitialBgColor"/>
                                            <interstitialBgOption
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Retailer Background Option"
                                                name="./interstitialBackOption">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image"
                                                        value="image"/>
                                                    <color
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Color"
                                                        value="color"/>
                                                </items>
                                            </interstitialBgOption>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </interstitialBackgroundConfig>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
