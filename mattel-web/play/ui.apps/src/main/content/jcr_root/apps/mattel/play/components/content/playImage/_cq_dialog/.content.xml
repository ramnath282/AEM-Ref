<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Play Image"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500"
    width="{Long}600">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tileThumbnail
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        allowUpload="{Boolean}false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldLabel="Thumbnail"
                        fileReferenceParameter="./tileThumbnail"
                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                        multiple="{Boolean}false"
                        name="./logoImage"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                    <alttext
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Alternative text for image"
                        fieldLabel="Alternative Text for Thumbnail Image"
                        name="./tileAltTxt"/>
                    <detailpageMapping
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldLabel="Detail Page Mapping"
                        name="./detailpageMapping"
                        required="{Boolean}true"
                        rootPath="/content/"/>
                    <descLineOne
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter the First line for description"
                        fieldLabel="First line for description"
                        name="./descLineOne"/>
                    <descLineTwo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Please enter the Second line for description"
                        fieldLabel="Second line for description"
                        name="./descLineTwo"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
