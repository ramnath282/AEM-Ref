<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Featured Articles"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500"
    width="{Long}600">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                height="{Long}600"
                width="{Long}600">
                <items jcr:primaryType="nt:unstructured">
                    <pathForArticle1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Enter the article path for which data needs to be shown"
                        fieldLabel="Path for First Article"
                        name="./pathForArticle1"
                        rootPath="/content/ag/en/explore"/>
                    <pathForArticle2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Enter the article path for which data needs to be shown"
                        fieldLabel="Path for Second Article"
                        name="./pathForArticle2"
                        rootPath="/content/ag/en/explore"/>
                    <pathForArticle3
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Enter the article path for which data needs to be shown"
                        fieldLabel="Path for Third Article"
                        name="./pathForArticle3"
                        rootPath="/content/ag/en/explore"/>
                    <maxNumofArticles
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Enter the maximum no. of articles to be shown. Minimum would be: 3"
                        fieldLabel="Maximum No. of Articles"
                        name="./maxNumofArticles"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
